<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/button_default"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:text="Default Button" />

    <TextView
        android:id="@+id/button_attr_borderless"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:background="@drawable/drawable_no_layer" />

    <TextView
        android:id="@+id/button_shape"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Shape"
        android:clickable="true"
        android:background="@drawable/shape_ripple" />

    <TextView
        android:id="@+id/button_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Drawable"
        android:clickable="true"
        android:background="@drawable/drawable_ripple" />

    <TextView
        android:id="@+id/button_drawable_only_mask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/drawable_only_mask_ripple"
        android:clickable="true"
        android:gravity="center"
        android:text="Only Mask" />

    <TextView
        android:id="@+id/button_drawable_different_mask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drawable_with_other_mask_ripple"
        android:clickable="true"
        android:gravity="center"
        android:text="Different Mask" />

</LinearLayout>