<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.view" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".RoundViewActivity" />
        <activity android:name=".PaintActivity" />
        <activity android:name=".CanvasActivity" />

        <activity android:name=".WidgetActivity" />
        <activity android:name=".viewSwitcher.ViewSwitcherActivity" />
        <activity android:name=".appbarLayout.AppbarLayoutActivity" />

        <activity android:name=".ViewHelperActivity" />
        <activity android:name=".viewdraghelper.ViewDragHelperActivity" />
    </application>

</manifest>